= image_tag @event.background.url, class: "bg-img"
#container
	%h1 Hello #{@user.name}, the Treemendous Traveller! 
	%h2 Please describe your journey to #{@event.name}

	%button.transport_button.car_b Car
	%button.transport_button.bus_b Truck/Bus
	%button.transport_button.train_b Train
	%button.transport_button.plane_b Plane

	= form_tag(event_trips_path, method: 'post') do
		.transport.car
			%ul.question
				%li= label_tag("car_km", "Kilometers travelled by car: ")
				%li= number_field_tag("car_km", step: 0.5)
				%li= select_tag("car_size", options_for_select(Trip.car_sizes), prompt: "Car Size")
			%ul.question
				%li= label_tag("car_people", "Number of people in the car: ")
				%li= number_field_tag("car_people", step: 0.5)
		.transport.bus
			%ul.question
				%li= label_tag("bus_km", "Kilometers travelled by bus: ")
				%li= number_field_tag("bus_km", step: 0.5)
		.transport.train
			%ul.question
				%li= label_tag("train_km", "Kilometers travelled by train: ")
				%li= number_field_tag("train_km", step: 0.5)
		.transport.plane
			%ul.question
				%li= label_tag("plane_type", "Origin of Flight: ")
				%li= select_tag("plane_type", options_for_select(Trip.plane_types))
		%div
			= submit_tag("Go", class: "button")
