#container
	%h1= @event.name
	%p= @event.about
	
	= form_for @user do |f|
		%ul
			%li
				= f.text_field(:name, autofocus: true, placeholder: 'Name')
			%li
				= f.email_field(:email, placeholder: 'Email')
			%li
				= f.hidden_field(:event_id, value: params[:id])
			#email_input_response

%style
	body {
	background: url(#{Event.find(params[:id]).attachment})
	}